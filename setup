#!/usr/bin/env bash

CWD=$(cd -- $(dirname $0) && pwd)

function getdistro
{
    [ -r /etc/os-release ]                                     \
        && awk -F= '/^ID=/ {print $2}' /etc/os-release | xargs \
        || echo linux
}

function getsucmd
{
    for C in sudo doas ; do
        (command -v $C 2>&1 > /dev/null) \
            && echo $C && return
    done
}

function getaurhelper
{
    for C in paru yay aura ; do
        (command -v $C 2>&1 > /dev/null) \
            && echo $C && return
    done
}

function getpkgs
{
    local DISTRO=$1
    local PROG=$2

    case "$PROG@$DISTRO" in
        zsh@arch)
            echo zsh lsd starship zoxide fzf
            ;;
        zsh@gentoo)
            echo app-shells/{zsh,starship,zoxide,fzf}
            ;;
        kitty@arch)
            echo kitty
            ;;
        kitty@gentoo)
            echo x11-terms/kitty
            ;;
        nvim@arch)
            echo neovim luarocks
            ;;
        nvim@gentoo)
            echo app-editors/neovim dev-lua/luarocks
            ;;
        hypr@arch)
            echo hyprland
            ;;
        hypr@gentoo)
            echo gui-wm/hyprland
            ;;
        tmux@arch)
            echo tmux
            ;;
        tmux@gentoo)
            echo app-misc/tmux
            ;;
        extras@arch)
            echo lsd ripgrep fd bat
            ;;
        extras@gentoo)
            echo sys-apps/{lsd,ripgrep,fd,bat}
            ;;
        *)
            echo "No package preset for program '$PROG' on $DISTRO" >&2
            ;;
    esac
}

function installpkgs
{
    local DISTRO=$1
    local PKGS=${@:2}
    local SU=$(getsucmd)

    case $DISTRO in
        arch)
            $(getaurhelper) --needed -S $PKGS
            ;;
        gentoo)
            $SU emerge --ask $PKGS
            ;;
        *)
            echo "Cannot install packages. ($DISTRO is not supported)" >&2
            ;;
    esac
}

function installprogs
{
    local DISTRO=$(getdistro)

    for PROG in $@ ; do
        PKGS+="$(getpkgs $DISTRO $PROG) "
    done

    [ ${#PKGS} -gt 0 ] && installpkgs $DISTRO $PKGS
}

function linkconfig
{
    local CONF=${XDG_CONFIG_HOME:-$HOME/.config}

    case $1 in
        zsh)
            DST=$CONF/zsh
            ;;
        kitty)
            DST=$CONF/kitty
            ;;
        nvim)
            DST=$CONF/nvim
            ;;
        hypr)
            touch $CWD/hypr/override.hl
            DST=$CONF/hypr
            ;;
        tmux)
            DST=$CONF/tmux
            ;;
        *)
            return
            ;;
    esac

    if ! [ -e $DST ] ; then
        ln --symbolic --verbose $CWD/$1 $DST
    else
        echo "Not linking '$1' to '$DST' because a file already exists"
    fi
}

function linkconfigs
{
    for PROG in $@ ; do
        linkconfig $PROG
    done
}

function selectpreset
{
    local PRESET=$1
    local PRESET_FILE=./hypr/presets/${PRESET:-default}.hl

    [ -f $PRESET_FILE ]                                    \
        || echo "Hypr preset '$PRESET' does not exist" >&2 \
        && return

    sed --in-place "s|\(source = \./presets/\).\+|\1$1\.hl|" $PRESET_FILE
    
    if [[ $PRESET == excalibur ]] ; then
        hyprpm add https://github.com/Duckonaut/split-monitor-workspaces
        hyprpm enable split-monitor-workspaces
    fi
}

function getallprogs
{
    echo zsh kitty nvim hypr tmux extras
}

case $1 in
    install)
        if [ $2 = all ] ; then
            installprogs $(getallprogs)
        else
            installprogs ${@:2}
        fi
        ;;
    link)
        if [ $2 = all ] ; then
            linkconfigs $(getallprogs)
        else
            linkconfigs ${@:2}
        fi
        ;;
    preset)
        selectpreset $2
        ;;
    everything)
        $CWD/setup install all
        $CWD/setup link all
        ;;
esac
