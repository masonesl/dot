source = ./rose-pine.hl

decoration {
    rounding = 12

    active_opacity   = 0.95
    inactive_opacity = 0.95

    shadow {
        render_power = 2
        range        = 10

        color_inactive = 0x00000000
        color          = $highlightLow
    }

    blur {
        size   = 10
        passes = 3
        xray   = true
        popups = true
    }
}
